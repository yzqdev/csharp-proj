<Application
    x:Class="EyesGuard.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EyesGuard"
    Startup="Application_Startup"
    StartupUri="pack://application:,,,/EyesGuard;component/Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--#region Colors-->
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Colors/SolidColors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Colors/GradientColors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Colors/SolidColorBrushes.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Colors/GradientColorBrushes.xaml" />
                <!--#endregion-->

                <!--#region Fonts-->
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Fonts/FontsDictionary.xaml" />
                <!--#endregion-->

                <!--#region Images-->
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Images/MenuIcons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Images/TaskbarIconResources.xaml" />

                <!--#endregion-->

                <!--#region Templates-->
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/BlueMenuTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/BlueMenuItemTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/ChromeButtonTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/GuardButtonTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/TextBlockWhiteTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/CheckboxWhiteTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/GreenButtonTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/FancyTooltipTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/ComboBoxTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Templates/HyperlinkTemplate.xaml" />

                <!--#endregion-->

                <!--#region Taskbar-->
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Views/Menus/EyesGuardTaskbarIcon.xaml" />
                <!--#endregion-->

                <!--#region Converters-->
                <ResourceDictionary Source="pack://application:,,,/EyesGuard;component/Resources/Converters/Converters.xaml" />
                <!--#endregion-->

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
