<UserControl
    x:Class="KeqingNiuza.View.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:KeqingNiuza.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="{StaticResource ContentViewBackground}"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
        </Style>
        <Style TargetType="Hyperlink">
            <Setter Property="TextDecorations" Value="None" />
        </Style>
    </UserControl.Resources>

    <hc:ScrollViewer IsInertiaEnabled="True">

        <Grid>

            <!--  项目信息  -->
            <StackPanel Margin="30,0,10,10">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="20"
                    Text="关于" />
                <TextBlock x:Name="TextBlock_Version" Margin="0,5,0,5" />
                <TextBlock Margin="0,5,0,5" Text="本软件以MIT协议开源" />
                <StackPanel Margin="0,5,0,5" Orientation="Horizontal">
                    <TextBlock Text="项目地址：" />
                    <TextBlock>
                        <Hyperlink Click="Hyperlink_Click" NavigateUri="https://github.com/Scighost/KeqingNiuza">Github@Scighost/KeqingNiuza</Hyperlink>
                    </TextBlock>
                </StackPanel>

                <!--  导入6个月前的数据  -->
                <TextBlock
                    Margin="0,10,0,10"
                    FontSize="16"
                    Text="导入6个月之前的数据" />
                <Button
                    x:Name="Button_ImportExcel"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Left"
                    Click="Button_ImportExcel_Click"
                    Content="导入数据"
                    FontSize="12" />

                <!--  手动输入祈愿记录网址  -->
                <TextBlock
                    Margin="0,10,0,4"
                    FontSize="16"
                    Text="手动输入祈愿记录网址" />
                <TextBlock
                    Margin="0,4,0,5"
                    Foreground="Gray"
                    Text="以 https 开头、以 #log 结尾" />
                <StackPanel Margin="0,5,0,5" Orientation="Horizontal">
                    <TextBox x:Name="TextBox_InputUrl" Width="300" />
                    <Button
                        x:Name="Button_InputUrl"
                        Margin="8,0,0,0"
                        Click="Button_InputUrl_Click"
                        Content="确认"
                        FontSize="12" />
                </StackPanel>

                <!--  祈愿记录备份  -->
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="20"
                    Text="祈愿记录备份" />
                <TextBlock Margin="0,6,0,0" Text="刻记牛杂店提供的祈愿记录备份服务。" />
                <Button
                    x:Name="Button_WishlogBackup"
                    Margin="0,6,0,0"
                    HorizontalAlignment="Left"
                    Click="Button_WishlogBackup_Click"
                    Content="祈愿记录备份" />


                <!--  捐赠  -->
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="20"
                    Text="捐赠" />
                <TextBlock Margin="0,6,0,0" Text="如果觉得我写的软件还不错，欢迎推荐给朋友，也欢迎投喂。" />
                <TextBlock Margin="0,6,0,0">
                    投喂途径：<Hyperlink Click="Hyperlink_Click" NavigateUri="https://github.com/xunkong">支付宝</Hyperlink>
                    、<Hyperlink Click="Hyperlink_Click" NavigateUri="https://github.com/xunkong">微信支付</Hyperlink>
                </TextBlock>
            </StackPanel>

        </Grid>

    </hc:ScrollViewer>


</UserControl>
