                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </kc:ScrollViewerEx>
                        </StackPanel>
                    </Grid>
                </Border>


                <!--  常驻祈愿统计  -->
                <Border
                    Margin="5,10,5,0"
                    Background="White"
                    CornerRadius="4"
                    Visibility="{Binding WishSummary.PermanentStatistics, Converter={StaticResource Object2VisibilityConverter}}">
                    <Grid Margin="10,10,10,10" DataContext="{Binding WishSummary.PermanentStatistics}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
