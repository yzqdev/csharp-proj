                <StackPanel>
                    <TextBlock
                        Margin="0,20,0,0"
                        FontSize="20"
                        Text="实时便笺" />
                    <TextBlock
                        Margin="0,4,0,0"
                        Foreground="Gray"
                        Text="此功能需要 Windows 10 20H1 及以上版本（Windows 11 不可用），内容以磁贴形式呈现" />
                    <Button
                        x:Name="Button_RealtimeNotes"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        Click="Button_RealtimeNotes_Click"
                        Content="实时便笺" />
                </StackPanel>


                <StackPanel>
                    <TextBlock
                        Margin="0,20,0,0"
                        FontSize="20"
                        Text="其他" />
                    <StackPanel Margin="0,6,0,0" Orientation="Horizontal">
                        <TextBlock
                            Width="120"
                            FontSize="16"
                            Text="下载推荐壁纸" />
                        <ToggleButton
                            HorizontalAlignment="Left"
                            IsChecked="{Binding IsDownloadWallpaper}"
                            Style="{StaticResource ToggleButtonSwitch}" />
                    </StackPanel>
                    <TextBlock
                        Margin="0,4,0,0"
                        Foreground="Gray"
                        Text="启动器运行时会下载推荐壁纸，作为其背景图片" />
                    <TextBlock
                        Margin="0,4,0,0"
                        Foreground="Gray"
                        Text="壁纸保存在wallpaper文件夹中，内容仅代表开发者个人喜好" />
                    <Button
                        x:Name="Button_DownloadWallpaper"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Left"
                        Click="Button_DownloadWallpaper_Click"
                        Content="立即下载" />

                </StackPanel>


                <TextBlock Margin="0,24,0,0" />
            </StackPanel>
        </hc:ScrollViewer>


        <StackPanel
            Margin="12,0,12,8"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <TextBlock
                Cursor="Hand"
                FontFamily="{StaticResource IconFamily}"
                Foreground="Gray"
                MouseLeftButtonUp="GuidText_MouseLeftButtonUp"
                Text="{StaticResource Copy}" />
            <TextBlock
                x:Name="GuidText"
                Margin="4,0,0,0"
